<section class="section">
  <div class="row small-text-center padding--vertical--maxi">
    <h2 class="small-12 columns heading-1 padding--bottom"><%= @post.the_field('descriptive-title') %></h2>
    <div class="small-12 medium-offset-1 medium-10 large-offset-2 large-8 columns end">
      <%= simple_format(@post.the_field('description')) %>
    </div>
    <div class="small-12 columns padding--top">
      <a class="button scroll-to" href="#project-filters"><%= t('Read') %></a>
    </div>
  </div>
</section>
<section class="project-filters small-text-center padding--horizontal--mini padding--top--mini padding--bottom--mini" id="project-filters">
  <div class="row row--full-width">
    <% current_site.the_post_type('project').post_type.post_tags.each do |tag| %>
      <a href="#" class="project-filters__button" data-id="<%= tag.id %>"><%= t(tag.name) %></a>
    <% end %>
  </div>
</section>
<section class="section padding--top" id="major-projects">
  <div class="row row--full-width">
    <% current_site.the_category('major').decorate.the_posts().reorder('posts.updated_at DESC').each do |post| %>
      <% post = post.decorate %>
      <% techs = post.the_tags %>
      <div class="project project--major" data-techs="<% techs.each do |tech| %><%= tech.id %>,<% end %>">
        <div class="section-table ">
          <% switch_side = cycle('switch-side ', '') %> 
          <div class="<%= switch_side  %>text-side">
            <div class="padding--vertical small-padding--horizontal--mini medium-padding--horizontal--maxi large-padding--horizontal--huge">
              <h3 class="heading-3"><%= post.the_title %></h3>
              <h2 class="padding--bottom--tiny"><%= post.the_field('introduction') %></h2>
              <p class="small padding--bottom--mini text-grey">
                <% techs.each do |tech| %>
                  <%= t(tech.name) %><% if not techs.last == tech %>, <% end %>
                <% end %>
              </p>
              <p class="padding--bottom"><%= post.the_field('header') %></p>
              <a href="<%= post.the_url %>" class="button"><%= t('Read more') %></a>
            </div>
          </div>
          <div class="<%= switch_side  %>img-side" style="<%= bgCover(post.the_thumb_url) %>"></div>
        </div>
      </div>
    <% end %>
  </div>
</section>
<section class="section" id="other-projects">
  <div class="row row--full-width collapse small-text-center" data-equalizer>
    <% current_site.the_category('minor').decorate.the_posts().reorder('posts.updated_at DESC').each do |post| %>
      <% post = post.decorate %>
      <% techs = post.the_tags %>
      <div class="small-12 medium-6 large-4 columns end project project--other remove-equalize-on-small <%= cycle('bg-green text-white' , '', 'bg-grey-light') %>" data-techs="<% techs.each do |tech| %><%= tech.id %>,<% end %>" data-equalizer-watch>
        <a href="<%= post.the_url %>" class="wrap-link">
          <div class="small-padding--horizontal large-padding--horizontal--maxi small-padding--vertical medium-padding--vertical--maxi">
            <div class="project--other__image-wrap">
              <div class="project--other__image" style="<%= bgCover(post.the_thumb_url) %>"></div>
            </div>
            <h3 class="heading-3 padding--top"><%= post.the_title %></h3>
            <h2 class="padding--bottom--mini"><%= post.the_field('introduction') %></h2>
            <p class="small padding--bottom">
              <% techs.each do |tech| %>
                <%= t(tech.name) %><% if not techs.last == tech %>, <% end %>
              <% end %>
            </p>
            <span class="button button--light"><%= t('Read more') %></span>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</section>